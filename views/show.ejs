<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <%= blog.created.toDateString() %>
    <div class="ui top attached segment">
        <div class="item">
            <%= blog.body %>
        </div>
    </div>
    <br>
    <a href="/blogs/<%=blog._id%>/edit" class="ui green basic button">Edit Blog</a>
    <form id="delete" action="/blogs/<%=blog._id%>?_method=delete" method="post"><button class="ui red basic button">Delete Blog</button></form>
</div>
<% include ./partials/footer %>